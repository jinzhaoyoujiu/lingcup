@model LinJiaYou.Models.Essay

@{
    ViewBag.Title = "详情";
}
<style type="text/css">
    .essayDetailsContent {
        display: inline;
        width: 99%;
    }
        .essayDetailsContent img {
            text-align: center;
            width: 96%;
        }

    .essayDetailsAuthor {
        text-align: left;
        padding-left: 2%;
        margin-top: 0.5em;
        color: #ff5b35;
    }
    .essayDetailsTitle{
        padding-left:2%;
    }
        .essayDetailsTitle span{
            font-size:1.5em;
        }
</style>
<div>
    <div class="essayDetailsTitle">
        <span>@Model.Title</span>
    </div>
    <div  class="essayDetailsAuthor">
        <span>@Model.Tourist.Name</span>
    </div>
    <div class="essayDetailsContent">
        @Html.Raw(Model.Content)
    </div>
</div>
