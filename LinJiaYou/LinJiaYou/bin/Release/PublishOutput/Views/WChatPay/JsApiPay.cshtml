    //调用微信JS api 支付
    function jsApiCall()
    {
        WeixinJSBridge.invoke(
        'getBrandWCPayRequest',
        $.parseJSON('@(new HtmlString(ViewBag.wxJsApiParam))'),//josn串
        function (res)
        {
            WeixinJSBridge.log(res.err_msg);
