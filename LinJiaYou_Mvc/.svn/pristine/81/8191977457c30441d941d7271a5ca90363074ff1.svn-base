@model IEnumerable<LinJiaYou.Models.Shop>

    @{
        ViewBag.Title = "Index";
    }

    <h2>Index</h2>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Area)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayName("封面")
            </th>
            <th></th>
        </tr>

        @foreach (LinJiaYou.Models.Shop item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Area)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @{
                        string url = "";
                        if (item.Pictures.Count > 0)
                        {
                            if (item.Pictures.Find(x => x.Is_Cover == true)!=null && item.Pictures.Find(x => x.Is_Cover == true).QiNiuPicture!=null)
                            {

                                url = item.Pictures.Find(x => x.Is_Cover == true).QiNiuPicture.Url;
                            }
                        }
                        if (url == "")
                        {
                            url = "/Content/images/shopNone.jpg";
                        }
                    }
                    <img src="@url" style="width:200px;height:120px;" />
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                </td>
            </tr>
        }

    </table>
