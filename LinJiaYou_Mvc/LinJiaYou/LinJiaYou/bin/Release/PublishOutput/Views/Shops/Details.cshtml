@model LinJiaYou.Models.Shop

@{
    ViewBag.Title = "Details";
}

    <style>
        .logo {
            width: 100%;
            height: 300px;
            background: url(/Content/svg/xiayu.svg);
            background-size: 100% 100%;
            border: 1px solid;
            /*background-position-y: 60px;*/
            /*background-position-x: 30px;*/
            background-repeat: no-repeat;
            margin-top:30px;
            /*border-top-width:10px;*/
            clear:both;
        }
        .shopPosition {
            margin-left: 250px;
            margin-top: 70px;
        }
    </style>
    <div class="logo">
        <canvas id="myCanvas" width="20" height="20" style=" margin-left: @(Model.Position!=null? Convert.ToInt32(Model.Position.Split(';')[0].Split(':')[1])-10:0)px;  
                margin-top: @(Model.Position!=null?Convert.ToInt32( Model.Position.Split(';')[1].Split(':')[1])-10:0)px;" >
                your browser does not support the canvas element.
        </canvas>
    </div>
    @*<embed src="~/Content/svg/circle.svg" width="300" height="100" type="image/svg+xml" pluginspage="http://www.adobe.com/svg/viewer/install/" />*@
    <script>
        console.log('@(Model.Position != null)');
        if ('@(Model.Position != null)' === 'True') {
        var c = document.getElementById("myCanvas");
        var cxt = c.getContext("2d");
        cxt.fillStyle = "#ff0000";
        cxt.beginPath();
        cxt.arc(10, 10, 10, 0, Math.PI*2,false);
        cxt.closePath();
        cxt.fill();

        }
    </script>
